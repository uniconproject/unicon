                    recname,IntVal(rp->fields[2]),IntVal(rp->fields[3]),
                    IntVal(rp->fields[4]),IntVal(rp->fields[5]));
            break;
         case GL2D_READIMAGE:
            sprintf(buf,"[%s] x: %ld, y: %ld, width: %ld, height: %ld",
                    recname,IntVal(rp->fields[2]),IntVal(rp->fields[3]),
                    IntVal(rp->fields[4]),IntVal(rp->fields[5]));
