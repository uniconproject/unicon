procedure dbopen(dsn,table,user,password)
   return open(dsn,"o",table,user,password)
end

procedure dbfetch(db)
   return fetch(db)
end

procedure dbclose(db)
   return close(db)
end

procedure dbsql(db,sql)
   return sql(db,sql)
end

