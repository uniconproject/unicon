# replace special chars with proper escape sequences
procedure escape(s)
  idx:=1
  while idx <= *s do {
    case s[idx] of {
      "'": {
        s[idx]:="\\\'"
        idx+:=2
      }
      "%": {
        s[idx]:="\%"
        idx+:=2
      }
      "_": {
        s[idx]:="\_"
        idx+:=2
      }
      char(34): {
        s[idx]:="\\\""
        idx+:=2
      }
      "\\": {
        s[idx]:="\\\\"
        idx+:=2
      }
      default: idx+:=1
    }
  }
  return s
end
