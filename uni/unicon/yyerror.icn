procedure yyerror(s)

local errorObject

static t, __merr_errors
initial {
   t := table(table("syntax error"))
   t[0] := table("invalid declaration")
   t[26] := table("left parenthesis expected to start class fieldlist")
   t[26,374] := "fieldlist starts with left *parenthesis*, not curly brace!"
   t[26,257] := "left parenthesis expected to start class fieldlist"
   t[162] := table("a ; or \\n is missing between method header and body")
   t[314] := table("parameter name expected")
   t[356] := table("missing } somewhere before \"end\"")
   t[539] := table("unclosed parenthesis")
   t[10] := table("link list expected")
   t[78] := table("invalid argument to unary !")
   t[209] := table("unclosed list")
   t[209,272] := "missing operator or closing bracket"
   t[209,371] := "unclosed list"
   t[277] := table("missing or invalid second argument to +")
   t[434] := table("unclosed parenthesis")
   t[439] := table("missing \"do\" or some such keyword earlier, or expected a comma or right brace here")
   t[67] := table("invalid every control expression")
   t[72] := table("invalid repeat control expression")
   t[287] := table("missing or invalid second argument to !")
   t[491] := table("malformed case expression")
   t[9] := table("invocable list expected")
   t[77] := table("invalid while control expression")
   t[140] := table("invalid procedure body")
   t[161] := table("procedure not allowed within a class")
   t[276] := table("missing operand after |||")
   t[276,319] := "illegal space inside |||:="
   t[276,309] := "missing operand after |||"
   t[40] := table("missing parameter list in procedure declaration")
   t[213] := table("missing operator or unbalanced parenthesis/bracket")
   t[3] := table("global, class, or link expected")
   t[3,308] := "global, class, or link expected"
   t[3,283] := "method declaration outside any class"
   t[24] := table("missing semicolon")
   t[24,272] := "missing semicolon"
   t[24,275] := "semicolon expected"
   t[76] := table("invalid until control expression")
   t[118] := table("missing semicolon or operator")
   t[118,272] := "missing semicolon or operator"
   t[118,375] := "too many closing curly braces"
   t[118,367] := "missing semicolon or operator"
   t[165] := table("missing \"of\" in case expression")
   t[275] := table("missing operand after ||")
   t[275,319] := "illegal space inside ||:="
   t[275,309] := "missing operand after ||"
   t[448] := table("missing field name")
   t[453] := table("parameter modifier must be a (atomic) literal or a convertor")
   t[149] := table("missing comma or unclosed class field arguments")
   t[149,257] := "missing comma or unclosed class field arguments"
   t[149,283] := "unclosed class field arguments"
   t[301] := table("invalid local declaration")
   t[23] := table("procedure not allowed within a class")
   t[65] := table("invalid create expression")
   t[222] := table("expression expected, or need to move declaration to top of procedure or method")
   t[7] := table("unexpected end of file")
   t[28] := table("invalid global declaration")
   t[295] := table("field name expected")
   t[12] := table("procedure name expected")
   t[38] := table("invalid link declaration")
   t[143] := table("missing fieldname or right parenthesis")
   t[169] := table("missing then")
   t[169,371] := "missing then"
   t[169,365] := "spurious close-parenthesis"
   t[300] := table("invalid initial expression")
   t[64] := table("invalid case control expression")
   t[106] := table("invalid compound expression")
   t[106,272] := "invalid compound expression"
   t[106,319] := "assignment missing its left operand"
   t[284] := table("missing or invalid second argument to *")
   t[331] := table("missing then-part")
   t[48] := table("missing identifier")
   t[69] := table("invalid if control expression")
   t[205] := table("unclosed parenthesis")
   t[53] := table("parameter name expected")
   t[58] := table("unclosed literal or missing operator")
   t[79] := table("bad keyword name or bogus & precedes this token")
   t[42] := table("method expected")
   t[105] := table("unclosed list")
   t[131] := table("missing operator or \"do\" keyword")
   t[440] := table("parenthesis is required for method invocation")
   __merr_errors := 0
   }

   if s == "reinitialize merr errors" then {
      __merr_errors := 0
      return
      }
   if __merr_errors = 0 then iwrite(&errout)
   else if map(s)== "stack underflow. aborting..." then return
   __merr_errors +:= 1
   if __merr_errors > 10 then {
      if *\parsingErrors > 0 then {
	 every pe := !parsingErrors do {
	    iwrite(&errout, pe.errorMessage)
	    }
	 }
      istop("too many errors, aborting")
      }
   prefix := (\fName||":") | ""
   if s == "syntax error" then
      s := t[(\statestk)[1], yychar]
   if s == "syntax error" then {
      s ||:= " (" || (\statestk)[1] ||";"|| yychar || ")"
      if /merrflag then s ||:= "\n(use -M for assistance with this error)"
      }
   s := prefix ||yylineno||": # \""|| yytext || "\" " || s
   if \merrflag then {
      if ferr2 := open(\fName) then {
	 iwrite(&errout, "Reporting (-M) your error to the Oracle (",
	       merraddress, ") for assistance.")
	 iwrite(&errout, "Type any question you have on the lines below.",
	       " Type a blank line to finish.")
	 ferr := open("mail " || merraddress, "pw")
	 while iwrite(ferr, "" ~== read())
	 iwrite(ferr)
	 iwrite(ferr, s)
	 iwrite(ferr)
	 while iwrite(ferr, read(ferr2))
	 close(ferr2)
	 close(ferr)
         }
      }
   /parsingErrors := []
   errorObject := ParseError( yylineno, s )
   put( parsingErrors, errorObject )
   return
end
