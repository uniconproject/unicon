            break;
         case GL2D_DY:
            sprintf(buf,"[%s] dy: %ld",recname,IntVal(rp->fields[2]));
            break;
         default:
            glprintf("Not a valid 2d display list item\n");
            return NULL;
         }
      }
   return buf;
   } 
