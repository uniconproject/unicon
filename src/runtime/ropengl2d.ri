            sprintf(buf,"[%s]",recname);
/*
            GetReal(&(rp->fields[3]),v1);
            GetReal(&(rp->fields[4]),v2);
            GetReal(&(rp->fields[5]),v3);
            GetReal(&(rp->fields[6]),v4);
