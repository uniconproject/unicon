      "b"          |
      "break"      |
      "breakpoint" | # need to change breakpoints to show co-exp
      "breakpoints":{ Debug.Break.printBreakInfo(cmd)        }
      "awatch"     |
      "rwatch"     |
      "twatch"     |
      "vwatch"     |
      "watch"      |
      "watchpoint" |
      "watchpoints":{ Debug.Watch.printWatchInfo(cmd)        }
      "ptrace"     |
      "otrace"     |
      "ftrace"     |
      "trace"      |
      #"watchpoint" |
      "tracepoints":{ Debug.Trace.printTraceInfo(cmd)        }
