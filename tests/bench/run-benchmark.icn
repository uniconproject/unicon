               } else write_error(2)
            }
         "fannkuch" : {
            write_header()
            writes(left("fannkuch 9",30))
            tL := gettimes(run_fannkuch, 9)
            rL := calctimes(tL[1], tL[2], tL[3], tL[4])
            writetime(rL[1], rL[2], rL[3])
            }
         "fasta" : {
            write_header()
