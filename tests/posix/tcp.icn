procedure main()

   if fork() ~== 0 then {
      delay(2)
      f := open(":1234", "n") | stop("Couldn't open connection: ",
				    sys_errstr(&errno))
      write(f, "hellow, world!")
      write("ret: ", read(f))

      exit(0)
   }

   if f := open(":1234", "na") then {
      if fork() = 0 then {
	 handle(f)
	 exit(0)
      }
      close(f)
      delay(10)
      exit(0)
   }
   (&errno = 0) | stop("Couldn't accept: ", sys_errstr(&errno))
end
   
procedure handle(f)
   while line := read(f) do {
      s := reverse(line)
      write(f, s)
   }
end

		  
