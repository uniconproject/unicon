            break;
         case GL2D_PATTERN:
            sprintf(buf,"[%s] s: '%.*s'",recname,(int)StrLen(rp->fields[2]),
                    StrLoc(rp->fields[2]));
            break;
         case GL2D_CLIP:
            sprintf(buf,"[%s] x: %ld, y: %ld, width: %ld, height: %ld",
                    recname,IntVal(rp->fields[2]),IntVal(rp->fields[3]),
