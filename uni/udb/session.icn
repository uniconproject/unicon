#
# the shell ls command
#
method ls()
   system(DState.cmdHistory[1])
end

#
# the shell pwd command
#
method pwd()
   system(DState.cmdHistory[1])
end

#
# the shell cd command
#
method cd(cmd)
   chdir(cmd[2])
end

