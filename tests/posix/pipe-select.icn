$include "posix.icn"

procedure main()
   L := pipe() | stop("Couldn't get pipe: ", sys_errstr(&errno))

   if fork() = 0 then {
      # parent
      close(L[1])
      delay(10000)
      write(L[2], "Hello,")
      write(L[2], "   world!")
   } else {
      close(L[2])
      while 1 do {
	 while *(L := select(&input, L[1], 1000)) = 0 do
	    delay(10)
	 (&errno = 0) | stop("Select failed: ", sys_errstr(&errno))

	 if L[1] === &input then
	    line := reads()
	 else
	    (line := reads(L[1])) | break
	 write(line)
      }
      write("Everything's ok.")
   }
end
