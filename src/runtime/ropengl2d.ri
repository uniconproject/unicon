               fname = "nimbu23.ttf"; 
               }
            }
         else {
            /* Times-Italic - nimbu24.ttf */
            if (IS_FONT_ITALIC(flags) || IS_FONT_OBLIQUE(flags)) {
               fname = "nimbu24.ttf"; 
               }
            /* Times-Roman - nimbu22.ttf */
            else {
               fname = "nimbu22.ttf"; 
