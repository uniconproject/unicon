#
# Rule for making the object file
#
#
# Linking
#
ivib: ivib2 $(UFILES)
	$(UNICON) -o ivib -G $(UFILES) $(LIBFILES)
	$(CP) ivib$(EXE) $(BINDIR)
	@echo Linking complete.

ivib2:
	cd ..$(SWITCHAR)lib; make

