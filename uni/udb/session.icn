             Debug.DState           :=
             Debug.Break.DState     :=
             Debug.Watch.DState     :=
             Debug.Step.DState      :=
             Debug.Frame.DState     :=
             Debug.Print.DState     :=
             Debug.Trace.DState     :=
             Debug.Internal.DState  :=
             Debug.External.DState  :=
             Debug.DTA.DState       := State()

